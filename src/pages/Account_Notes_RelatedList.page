<apex:page standardController="Account" extensions="Account_Notes_RelatedList_Class" sidebar="false" showHeader="false">
  
 <style>
        a:hover {
            background:#e3f3ff; /*BG color is a must for IE6*/
            text-decoration: none;
        } 
        a.tooltip span {
            display:none; 
            padding:2px 3px; 
            margin-left:8px; 
            width:250px;
        }
        a.tooltip:hover span{
            display:inline; 
            position:absolute;
            background:#FFC; 
            border:1px solid #cccccc; 
            width:500px;
            color:#000000;
        }
        </style>
        
        <style>
            .ul{text-decoration:none}
        </style>

    <apex:form >                 

        <apex:pageblock id="notes__cList"> 

      <!--    <div style="margin-left: 30%;"><apex:commandLink value="New Note" action="{!newnotes}" target="_parent" styleClass="btn" style="text-decoration:none;padding:4px;"/></div> 

            <br/> -->
            
            <apex:pageBlockButtons location="top">
               <apex:commandlink action="{!newnotes}" target="_parent" styleClass="ul" >
                    <apex:commandButton value="New Note" />
                </apex:commandlink>
            </apex:pageBlockButtons>
            

            <apex:pageBlockTable value="{!noteslist}" var="cont" rendered="{!NOT(ISNULL(noteslist))}">                 

                <apex:column HeaderValue="Action" width="60"> 

                    <apex:commandLink value="Edit" style="color:#015ba7;" action="{!editnotes}" target="_parent" ><apex:param value="{!cont.id}" name="notes__cId"/> 

                    </apex:commandLink> 

                    &nbsp;|&nbsp; 

                    <apex:commandLink value="Del" onclick="return confirm('Are you sure?')" style="color:#015ba7;" action="{!deletenotes}" target="_parent"><apex:param value="{!cont.id}" name="notes__cId"/> 

                    </apex:commandLink> 

                </apex:column> 

                <apex:column headerValue="Notes Name" style="width:10%;"><apex:outputLink value="/{!cont.id}" target="_blank">{!cont.Name}</apex:outputLink> </apex:column>               

                <apex:column style="width:55%"  colspan="1" headerValue="Body"> 
                    <a class="tooltip" target="_blank">
                     <apex:outputLabel value="{!LEFT(cont.Body__c,120)}"  onclick="window.open('/{!cont.Id}', '_blank'); return false;"/>
                     <span>{!cont.Body__c}</span>
                     </a>
                 </apex:column>      

                <apex:column title="Created Date" value="{!cont.CreatedDate}"/> 
                
                <apex:column headerValue="Owner" style="width:15%;">
                    <apex:outputLink value="/{!cont.OwnerId}" target="_blank">{!cont.Owner.name}</apex:outputLink> 
                </apex:column>                                      

            </apex:pageBlockTable>            

            <apex:outputLabel value="No records to display" rendered="{!(ISNULL(noteslist))}" styleClass="noRowsHeader"></apex:outputLabel> 

        </apex:pageblock> 

    </apex:form>  

</apex:page>